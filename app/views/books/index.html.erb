<div class='body'>
  <div class='container'>
    <p id="notice"></p>
    <div class='row'>
      <%# USER INFO %>
      <div class='col-xs-3'>
        <h2>User info</h2>
        <table class='table'>
          <tr><img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" alt="No image" /></tr>
          <tr>
            <th>name</th>
            <th>tes</th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </table>
        <%# NEW BOOK %>
        <div class='row'>
          <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_10224" href="/users/10224/edit"></a>
        </div>
        <h2>New book</h2>
        <%= form_for(@book) do |f| %>
          <div class="field row">
            <label for="book_title">Title</label>
            <%= f.text_field :title, class:'col-xs-12 book_title' %>
          </div>
          <div class="field row">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body, class:'col-xs-12 book_body' %>
          </div>
          <div class="actions row">
            <%= f.submit 'Create Book', class:'btn btn-primary col-xs-12' %>
          </div>
        <% end %>
      </div>
      <%# BOOKS %>
      <div class='col-xs-9'>
        <h2>Books</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <a href="/users/10214">
                    <img class="attachment user profile_image fallback" src="/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg" alt="No image icon" />
                  </a>
                </td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
