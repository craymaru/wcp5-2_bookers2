  <h2>User info</h2>
<%= form_for(@user) do |f| %>
    <div class="field">
      <label for="user_name">Name</label>
      <%= f.text_field :name, autofocus: true, class:"name", placeholder:"name"%>
    </div>
    <div class="field">
      <label for="user_image">Image</label>
      <input value="{}" data-reference="40eddea24da39067127e4089839929b5" type="hidden" name="user[profile_image]"><input class="user_image" data-reference="40eddea24da39067127e4089839929b5" include_hidden="false" type="file" name="user[profile_image]" id="user_profile_image">
    </div>
    <div class="field">
      <label for="user_introduction">Introduction</label>
      <%= f.text_area :introduction, class:"book_body introduction", id:"user_introduction" %>
    </div>
    <div class="actions">
      <%= f.submit "Update User", class:"btn btn-primary" %>
    </div>
<% end %>
            
    
